<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/totalSouce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/remainTime"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:text="@string/totalCount"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/totalSouce"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp"
        android:background="@drawable/btnreturn" />


    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/totalSouce"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/forgsad" />

    <TextView
        android:id="@+id/remainCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/button1"
        android:text="@string/reaminTime"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/remainTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remainCount"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/button1"
        android:text="@string/reaminTime"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>

